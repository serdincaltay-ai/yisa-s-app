{
  "version": "1.0",
  "description": "AI için yasak komutlar ve Patron onayı gerektiren işlemler",
  "forbidden_for_ai": [
    ".env",
    ".env.local",
    ".env.production",
    "API_KEY",
    "SECRET",
    "PASSWORD",
    "TOKEN",
    "git push",
    "git commit",
    "vercel deploy",
    "railway deploy",
    "npm publish",
    "DROP TABLE",
    "DELETE FROM",
    "TRUNCATE",
    "delete_user",
    "change_password",
    "grant_permission",
    "fiyat_degistir",
    "kullanici_sil",
    "yetki_degistir"
  ],
  "require_patron_approval": [
    "deploy",
    "commit",
    "push",
    "merge",
    "table create",
    "table alter",
    "user delete",
    "role change",
    "price change",
    "env change",
    "fiyat_degistir",
    "kullanici_sil",
    "yetki_degistir",
    "veritabani_degistir",
    "veritabani_yapisi_degistir",
    "robot_ayari_degistir",
    "environment_variable_degistir"
  ]
}
